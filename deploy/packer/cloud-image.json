{
  "variables": {
    "release_package_name": "",
    "google_project_id": "{{env `GOOGLE_PROJECT_ID`}}",
    "google_build_zone": "us-central1-a",
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_build_region": "eu-central-1",
    "azure_subscription_id": "{{env `AZURE_SUBSCRIPTION_ID`}}",
    "azure_tenant_id": "{{env `AZURE_TENANT_ID`}}",
    "azure_client_id": "{{env `AZURE_CLIENT_ID`}}",
    "azure_client_secret": "{{env `AZURE_CLIENT_SECRET`}}",
    "azure_resource_group": "{{env `AZURE_RESOURCE_GROUP`}}",
    "azure_storage_account": "krossboardvmimages",
    "azure_build_location": "Central US",
    "krossboard_koainstance_image": "{{env `KROSSBOARD_KOAINSTANCE_IMAGE`}}",
    "krossboard_ui_image": "{{env `KROSSBOARD_UI_IMAGE`}}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `google_project_id`}}",
      "source_image": "ubuntu-minimal-1804-bionic-v20200108",
      "source_image_family": "ubuntu-minimal-1804-lts",
      "image_name": "{{user `release_package_name`}}",
      "disk_size": "10",
      "machine_type": "n1-standard-1",
      "ssh_username": "ubuntu",
      "zone": "{{user `google_build_zone`}}"
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_build_region`}}",
      "source_ami": "ami-0cc0a36f626a4fdf5",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "ami-{{user `release_package_name`}}",
      "tags": {
        "baseosimg": "UbuntuServer-18.04-LTS-Canonical"
      }
    },
    {
      "type": "azure-arm",
      "subscription_id": "{{user `azure_subscription_id`}}",
      "tenant_id": "{{user `azure_tenant_id`}}",
      "client_id": "{{user `azure_client_id`}}",
      "client_secret": "{{user `azure_client_secret`}}",
      "managed_image_resource_group_name": "{{user `azure_resource_group`}}",
      "managed_image_name": "{{user `release_package_name`}}",
      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "18.04-LTS",
      "location": "{{user `azure_build_location`}}",
      "vm_size": "Standard_B1ms",
      "azure_tags": {
        "baseosimg": "UbuntuServer-18.04-LTS-Canonical"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "destination": "/tmp/",
      "source": "./{{user `release_package_name`}}.tgz"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 5",
        "cd /tmp",
        "tar zxf {{user `release_package_name`}}.tgz",
        "cd {{user `release_package_name`}}",
        "sed -i 's|krossboard_koainstance_image|{{user `krossboard_koainstance_image`}}|' ./scripts/krossboard.env",
        "sed -i 's|krossboard_ui_image|{{user `krossboard_ui_image`}}|' ./scripts/krossboard.env",
        "echo 'file ./scripts/krossboard.env updated'",
        "cat ./scripts/krossboard.env",
        "sudo ./install.sh"
      ]
    }
  ]
}