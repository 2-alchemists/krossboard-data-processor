{
  "variables": {
    "program_name": "koamc-cluster-manager",
    "program_version": "",
    "image_version": "",
    "google_project_id": "",
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
    "builders": [
      {
        "type": "googlecompute",
        "project_id": "{{user `google_project_id`}}",
        "source_image": "ubuntu-minimal-1804-bionic-v20200108",
        "source_image_family": "ubuntu-minimal-1804-lts",
        "image_name": "{{user `program_name`}}-v{{user `image_version`}}-{{timestamp}}",
        "disk_size": "10",
        "machine_type": "n1-standard-1",
        "ssh_username": "ubuntu",
        "zone": "us-central1-a"
      },
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "eu-central-1",
        "source_ami": "ami-0cc0a36f626a4fdf5",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "{{user `program_name`}}-v{{user `image_version`}}-{{timestamp}}"
      }
    ],
    "provisioners": [
        {
          "type": "file",
          "destination": "/tmp/",
          "source": "./koamc-cluster-manager-v20.03.1-x86_64.tgz"
        },
        {
        "type": "shell",
        "inline": [
          "sleep 5",
          "cd /tmp",
          "tar zxf koamc-cluster-manager-v{{user `program_version`}}-x86_64.tgz",
          "cd koamc-cluster-manager-v{{user `program_version`}}-x86_64",
          "sudo ./install.sh"
        ]
      }
    ]

  }