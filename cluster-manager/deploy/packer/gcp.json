{
  "variables": {
    "program_name": "koamc-cluster-manager",
    "program_version": "",
    "image_base_version": "",
    "google_project_id": ""
  },
    "builders": [
      {
        "type": "googlecompute",
        "project_id": "{{user `google_project_id`}}",
        "source_image": "ubuntu-minimal-1804-bionic-v20200108",
        "source_image_family": "ubuntu-minimal-1804-lts",
        "image_name": "{{user `program_name`}}-v{{user `image_base_version`}}-{{timestamp}}",
        "disk_size": "10",
        "machine_type": "n1-standard-1",
        "ssh_username": "packer",
        "zone": "us-central1-a"
      }
    ],
    "provisioners": [
        {
          "type": "file",
          "destination": "/tmp/",
          "source": "./koamc-cluster-manager-v20.03.1-x86_64.tgz"
        },
        {
        "type": "shell",
        "inline": [
          "sleep 5",
          "cd /tmp",
          "tar zxf koamc-cluster-manager-v{{user `program_version`}}-x86_64.tgz",
          "cd koamc-cluster-manager-v{{user `program_version`}}-x86_64",
          "sudo ./install.sh"
        ]
      }
    ]

  }